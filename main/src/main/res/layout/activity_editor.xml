<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/drawer_layout">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/content">

        <com.google.android.material.appbar.MaterialToolbar
            android:layout_height="?attr/actionBarSize"
            android:layout_width="match_parent"
            android:id="@+id/toolbar" />

        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_below="@+id/toolbar">

            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_below="@+id/toolbar"
                android:id="@+id/tabs_and_pager">

                <include
                    layout="@layout/editor_no_files_layout"
                    android:id="@+id/editor_no_files" />

                <RelativeLayout
                    android:id="@+id/tabs_undo_redo"
                    android:layout_height="40dp"
                    android:layout_width="match_parent">

                    <com.google.android.material.tabs.TabLayout
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        app:tabMode="scrollable"
                        android:background="@color/background"
                        android:layout_toLeftOf="@+id/undo_redo"
                        app:tabInlineLabel="true"
                        app:tabGravity="start"
                        android:id="@+id/editor_tab_layout" />

                    <LinearLayout
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/undo_redo">

                        <View
                            android:layout_height="match_parent"
                            android:layout_width="1dp"
                            android:background="@color/divider"
                            android:padding="4dp" />

                        <ImageButton
                            android:layout_height="match_parent"
                            android:layout_width="wrap_content"
                            android:src="@drawable/undo"
                            style="@style/Widget.AppCompat.ActionButton"
                            android:id="@+id/undo" />

                        <ImageButton
                            android:layout_height="match_parent"
                            android:layout_width="wrap_content"
                            android:src="@drawable/redo"
                            style="@style/Widget.AppCompat.ActionButton"
                            android:id="@+id/redo" />

                    </LinearLayout>

                </RelativeLayout>

                <androidx.viewpager2.widget.ViewPager2
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/tabs_undo_redo"
                    android:id="@+id/editor_pager" />

            </RelativeLayout>

        </RelativeLayout>

        <org.xedox.mpde.output.ToolsView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_below="@id/toolbar"
            android:layout_alignParentBottom="true"
            android:id="@+id/tools_view" />

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_height="match_parent"
        android:layout_width="300dp"
        android:background="@drawable/navigation_bar_background"
        android:id="@+id/navigation_view"
        android:layout_gravity="start">

        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <com.google.android.material.tabs.TabLayout
                android:layout_height="40dp"
                android:layout_width="match_parent"
                app:tabMode="scrollable"
                app:tabGravity="start"
                android:id="@+id/drawer_tab_layout" />

            <androidx.viewpager2.widget.ViewPager2
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_below="@+id/drawer_tab_layout"
                android:padding="6dp"
                android:id="@+id/drawer_pager" />

        </RelativeLayout>

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>
